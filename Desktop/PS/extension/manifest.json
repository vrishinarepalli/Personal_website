{
  "manifest_version": 3,
  "name": "Pokemon Showdown Set Predictor",
  "version": "1.0.0",
  "description": "Predicts opponent Pokemon sets in real-time using Smogon usage data and Bayesian inference",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://play.pokemonshowdown.com/*",
    "https://*.pokemonshowdown.com/*"
  ],

  "background": {
    "service_worker": "background/service_worker.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://play.pokemonshowdown.com/*",
        "https://*.pokemonshowdown.com/*"
      ],
      "js": [
        "lib/smogon_data.js",
        "lib/predictor.js",
        "content/battle_parser.js",
        "content/ui_overlay.js",
        "content/content.js"
      ],
      "css": [
        "content/overlay.css"
      ],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["lib/*.js", "content/*.css"],
      "matches": ["https://*.pokemonshowdown.com/*"]
    }
  ]
}
